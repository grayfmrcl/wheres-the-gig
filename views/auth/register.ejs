<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="../../contents/styles/style.css">
</head>

<body>

    <%- include('../partials/nav') %>

        <section id="register" class="content bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <h3>Register</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <form action="/auth/register" method="POST">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input id="name" name="name" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input id="email" name="email" type="email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input id="password" name="password" type="password" class="form-control" />
                            </div>
                            <a href="/" role="button" class="btn btn-secondary">Cancel</a>
                            <input type="submit" role="button" class="btn btn-primary" value="Register" />
                        </form>
                    </div>
                </div>
                <%- include('../partials/validation')%>
            </div>
        </section>

        <%- include('../partials/script') %>
</body>

</html>